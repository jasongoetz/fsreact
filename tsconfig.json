{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2017"
    ],
    "strict": true,
    "jsx": "preserve",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}
